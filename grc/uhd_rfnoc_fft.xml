<?xml version="1.0"?>
<block>
  <name>RFNoC: FFT</name>
  <key>uhd_rfnoc_streamer_fft</key>
  <import>import ettus</import>
  <make>ettus.rfnoc_streamer(
    self.device3,
    "FFT_{}".format($block_index),
    uhd.stream_args(
        cpu_format="fc32", \# TODO: This must be made an option
        otw_format="sc16",
        args="fftsize=$fft_size,magnitude_out=$magnitude_out",
    )
)</make>

  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <type>enum</type>
    <option>
      <name>8</name>
      <key>8</key>
    </option>
    <option>
      <name>16</name>
      <key>16</key>
    </option>
    <option>
      <name>32</name>
      <key>32</key>
    </option>
    <option>
      <name>64</name>
      <key>64</key>
    </option>
    <option>
      <name>128</name>
      <key>128</key>
    </option>
    <option>
      <name>256</name>
      <key>256</key>
    </option>
    <option>
      <name>512</name>
      <key>512</key>
    </option>
    <option>
      <name>1024</name>
      <key>1024</key>
    </option>
    <option>
      <name>2048</name>
      <key>2048</key>
    </option>
    <option>
      <name>4096</name>
      <key>4096</key>
    </option>
  </param>

  <param>
    <name>FFT Output</name>
    <key>magnitude_out</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>0</key>
    </option>
    <option>
      <name>Magnitude</name>
      <key>1</key>
    </option>
    <option>
      <name>Magnitude^2</name>
      <key>2</key>
    </option>
  </param>

  <param>
    <name>FFT Select</name>
    <key>block_index</key>
    <type>enum</type>
    <option>
      <name>0</name>
      <key>0</key>
    </option>
    <option>
      <name>1</name>
      <key>1</key>
    </option>
    <option>
      <name>2</name>
      <key>2</key>
    </option>
    <option>
      <name>3</name>
      <key>3</key>
    </option>
    <option>
      <name>4</name>
      <key>4</key>
    </option>
    <option>
      <name>5</name>
      <key>5</key>
    </option>
    <option>
      <name>6</name>
      <key>6</key>
    </option>
    <option>
      <name>7</name>
      <key>7</key>
    </option>
    <option>
      <name>8</name>
      <key>8</key>
    </option>
    <option>
      <name>9</name>
      <key>9</key>
    </option>
    <option>
      <name>10</name>
      <key>10</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
    <domain>rfnoc</domain>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
    <domain>rfnoc</domain>
  </source>
</block>
