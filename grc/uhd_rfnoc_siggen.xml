<?xml version="1.0"?>
<block>
  <name>RFNoC: SigGen</name>
  <key>uhd_rfnoc_streamer_siggen</key>
  <import>import ettus</import>
  <make>ettus.rfnoc_generic(
    self.device3,
    uhd.stream_args( \# TX Stream Args
        cpu_format="fc32", \# TODO: This must be made an option
        otw_format="sc16",
        args="",
    ),
    uhd.stream_args( \# RX Stream Args
        cpu_format="fc32", \# TODO: This must be made an option
        otw_format="sc16",
        args="",
    ),
    "SigGen", $block_index, $device_index,
)
self.$(id).set_arg("spp",  $spp)
self.$(id).set_arg("frequency", ((2*$frequency)/$samp_rate))
self.$(id).set_arg("waveform", $waveform)
self.$(id).set_arg("gain", $gain)
self.$(id).set_arg("enable", $enable)
self.$(id).set_arg("amplitude_i",  $(amplitude).real)
self.$(id).set_arg("amplitude_q",  $(amplitude).imag)
self.$(id).set_arg("start_phase", ((2 * $start_freq) / $samp_rate) )
self.$(id).set_arg("delta_phase", ((2 * ($start_freq - $stop_freq) ) / ($sweep_width * $samp_rate * $samp_rate)) )
self.$(id).set_arg("number_steps", ($sweep_width * $samp_rate) )

  </make>
  <callback>set_arg("frequency", ((2*$frequency)/$samp_rate))</callback>
  <callback>set_arg("gain", $gain)</callback>
  <callback>set_arg("enable", $enable)</callback>
  <callback>set_arg("amplitude_i", $(amplitude).real)</callback>
  <callback>set_arg("amplitude_q", $(amplitude).imag)</callback>
  <callback>set_arg("waveform", $waveform)</callback>
  <callback>set_arg("spp", $spp)</callback>
  <callback>set_arg("start_phase", ((2 * $start_freq) / $samp_rate) )</callback>
  <callback>set_arg("delta_phase", ((2 * ($start_freq - $stop_freq) ) / ($sweep_width * $samp_rate * $samp_rate)) )</callback>
  <callback>set_arg("number_steps", ($sweep_width * $samp_rate) )</callback>

  <param>
    <name>Frequency</name>
    <key>frequency</key>
    <value>0.1</value>
    <type>real</type>
  </param>

  <param>
    <name>Start Frequency</name>
    <key>start_freq</key>
    <value>1000000</value>
    <type>real</type>
  </param>

  <param>
    <name>Stop Frequency</name>
    <key>stop_freq</key>
    <value>11000000</value>
    <type>real</type>
  </param>

  <param>
    <name>Sweep Width</name>
    <key>sweep_width</key>
    <value>0.000004</value>
    <type>real</type>
  </param>

  <param>
    <name>Packet Size</name>
    <key>spp</key>
    <value>364</value>
    <type>int</type>
  </param>

  <param>
    <name>Enable</name>
    <key>enable</key>
    <type>int</type>
    <option>
      <name>True</name>
      <key>1</key>
    </option>
    <option>
      <name>False</name>
      <key>0</key>
    </option>
  </param>

  <param>
    <name>Gain</name>
    <key>gain</key>
    <value>1.0</value>
    <type>real</type>
  </param>

  <param>
    <name>Amplitude</name>
    <key>amplitude</key>
    <value>1.0</value>
    <type>complex</type>
  </param>

  <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <value>10000000</value>
    <type>real</type>
  </param>

  <param>
    <name>Waveform</name>
    <key>waveform</key>
    <type>string</type>
    <option>
      <name>Constant</name>
      <key>"CONSTANT"</key>
    </option>
    <option>
      <name>Sine</name>
      <key>"SINE_WAVE"</key>
    </option>
    <option>
      <name>Noise</name>
      <key>"NOISE"</key>
    </option>
    <option>
      <name>FMCW</name>
      <key>"FMCW"</key>
    </option>
  </param>

  <param>
    <name>SigGen Select</name>
    <key>block_index</key>
    <value>-1</value>
    <type>int</type>
    <hide>#if int($block_index()) &lt; 0 then 'part' else 'none'#</hide>
    <tab>RFNoC Config</tab>
  </param>
  <param>
    <name>Device Select</name>
    <key>device_index</key>
    <value>-1</value>
    <type>int</type>
    <hide>#if int($device_index()) &lt; 0 then 'part' else 'none'#</hide>
    <tab>RFNoC Config</tab>
  </param>

  <param>
    <name>FPGA Module Name</name>
    <key>fpga_module_name</key>
    <value>noc_block_siggen</value>
    <type>string</type>
    <hide>all</hide>
    <tab>RFNoC Config</tab>
  </param>

  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$siggen_out</vlen>
    <domain>rfnoc</domain>
  </source>
</block>
